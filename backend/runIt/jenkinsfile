pipeline {
    agent any
    tools {
        jdk 'jdk17'
    }

    stages {
        stage('Build') {
            steps {
                sh '''
                    chmod +x ./backend/runIt/gradlew
                    cd ./backend/runIt
                    ./gradlew clean build -x test
                '''
            }
        }

        stage('Docker Hub Login') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'DOCKER_USER',
                    usernameVariable: 'DOCKER_USERNAME',
                    passwordVariable: 'DOCKER_PASSWORD'
                )]) {
                    sh 'echo "$DOCKER_PASSWORD" | docker login -u "$DOCKER_USERNAME" --password-stdin'
                }
            }
        }

        stage('Retrieve and Clean Up Running Container') {
           steps {
               script {
                   def containerId = sh(
                       script: 'docker ps -q --filter "publish=8081-8081"',
                       returnStdout: true
                   ).trim()
                    echo "Running Container ID: ${containerId}"
                   if (containerId) {
                       def imageName = sh(
                           script: "docker inspect --format='{{.Config.Image}}' ${containerId}",
                           returnStdout: true
                       ).trim()
                       echo "Image Name: ${imageName}"
                       sh "docker stop ${containerId}"
                       sh "docker rm ${containerId}"
                       sh "docker rmi -f ${imageName}"
                   }
               }
           }
        }

        stage('Docker Build and Push') {
            steps {
                withCredentials([usernamePassword(
                    credentialsId: 'DOCKER_HUB',
                    usernameVariable: 'DOCKER_REPO',
                    passwordVariable: 'DOCKER_PROJECT'
                )]) {
                    sh '''
                        cd ./backend
                        docker build -f runIt/Dockerfile -t "$DOCKER_REPO/runit" .
                        docker push "$DOCKER_REPO/runit"
                    '''
                    echo 'Docker push succeeded!'
                }
            }
        }



        stage('Deploy') {
            steps {
                withCredentials([string(credentialsId: 'DATABASE_ID', variable: 'database_id'),string(credentialsId: 'DATABASE_URL', variable: 'database_url'),
                string(credentialsId: 'RUNIT_PORT', variable: 'runit_port'),
                string(credentialsId: 'JWT_SECRET', variable: 'jwt_secret'),
                string(credentialsId: 'DATABASE_PW',variable:'database_pw'),
                string(credentialsId: 'S3_PROJECT',variable:'s3_project'),
                string(credentialsId: 'S3_ACCESSKEY',variable:'S3_accessKey'),
                string(credentialsId: 'S3_SECRETKEY',variable:'S3_secretKey')
                ]) {
                    sh '''

                        docker run -d -p 8081:8081 --name runit -e DATABASE_URL=$database_url -e DATABASE_ID=$database_id -e DATABASE_PW=$database_pw -e RUNIT_PORT=$runit_port -e JWT_SECRET=$jwt_secret -e S3_PROJECT=$s3_project -e S3_ACCESSKEY=$S3_accessKey -e S3_SECRETKEY=$S3_secretKey "rhkeh102416/runit"
                    '''
                }
                echo 'Deployment succeeded!'
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution completed.'
        }
        success {
            echo 'All stages completed successfully!'
        }
        failure {
            echo 'Pipeline encountered errors.'
        }
    }
}
